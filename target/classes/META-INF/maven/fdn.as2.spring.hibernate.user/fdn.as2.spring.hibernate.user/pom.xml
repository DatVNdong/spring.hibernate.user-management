<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>1.4.5.RELEASE</version>
  </parent>
  
  <groupId>fdn.as2.spring.hibernate.user</groupId>
  <artifactId>fdn.as2.spring.hibernate.user</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>fdn.as2.spring.hibernate.user</name>
  <description>fdn.as2.spring.hibernate.user</description>
  
  <properties>
  	<java-version>1.8</java-version>
  </properties>
  
  <dependencies>
  	<dependency>
  		<groupId>org.springframework.boot</groupId>
  		<artifactId>spring-boot-starter-web</artifactId>
  	</dependency>
  	<dependency>
	    <groupId>org.springframework.boot</groupId>
	    <artifactId>spring-boot-starter-thymeleaf</artifactId>
	</dependency>
	<dependency>
		<groupId>mysql</groupId>
		<artifactId>mysql-connector-java</artifactId>
		<version>5.1.44</version><!--$NO-MVN-MAN-VER$-->
		<scope>runtime</scope>
	</dependency>
	<dependency>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-data-jpa</artifactId>
	</dependency>
  </dependencies>
  
  <build>
  	<pluginManagement>
	  	<plugins>
	  		<plugin>
	  			<groupId>org.springframework.boot</groupId>
	  			<artifactId>spring-boot-maven-plugin</artifactId>
	  			<configuration>
	  				<executable>true</executable>
	  			</configuration>
	  		</plugin>
	  		<plugin>    
	  			<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-compiler-plugin</artifactId>
		        <version>3.6.1</version>
		        <configuration>
		            <source>${java-version}</source>
		            <target>${java-version}</target>
		        </configuration>
		    </plugin>
		    <plugin>
		    	<artifactId>maven-resources-plugin</artifactId>
		    	<version>2.7</version>
		    </plugin>
	  	</plugins>
  	</pluginManagement>
  </build>
</project>